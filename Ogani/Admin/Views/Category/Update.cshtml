﻿@using Ogani.Admin.Models
@model CategoryUpdateViewModel

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <h4 class="card-title">Update Category</h4>
                <form asp-action="Update" method="post" enctype="multipart/form-data" class="forms-sample">

                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="Name">Category Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model?.ImageUrl))
                    {
                        <div class="form-group mb-3">
                            <label>Current Image</label><br />

                            <img src="~/uploads/categories/@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail"
                                 style="width:120px; height:120px; object-fit:cover;" />
                        </div>
                    }

                    <div class="form-group mb-3">
                        <label for="ImageFile">Replace Image</label>
                        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                        <small class="form-text text-muted">Leave empty if you don’t want to change the image</small>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2"><i class="mdi mdi-check"></i>Submit</button>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>