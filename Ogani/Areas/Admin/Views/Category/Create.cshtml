@using Ogani.Areas.Admin.Models
@model CategoryCreateViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <h4 class="card-title mb-4">Add Category</h4>

                <form asp-action="Create" method="post" enctype="multipart/form-data">

                    <!-- Category Name -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <!-- Category Image -->
                    <div class="mb-3">
                        <label for="ImageFile" class="form-label fw-bold">Category Image</label>
                        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                        <small class="form-text text-muted">Upload an image for the category</small>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="mdi mdi-check"></i> Submit
                        </button>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
