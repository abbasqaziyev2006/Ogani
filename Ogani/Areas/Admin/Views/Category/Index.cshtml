@using Ogani.DataContext.Entities
@model List<Category>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">Categories</h4>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                        <i class="mdi mdi-plus"></i> Add Category
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 100px;">Image</th>
                                <th>Name</th>
                                <th style="width: 250px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var cat in Model)
                                {
                                    <tr>
                                        <!-- Image -->
                                        <td>
                                            <img src="@Url.Content(cat.ImageUrl != null ? $"~/uploads/categories/{cat.ImageUrl}" : "~/images/no-image.png")"
                                                 alt="@cat.Name"
                                                 class="img-thumbnail"
                                                 style="width: 80px; height: 80px; object-fit: cover;" />
                                        </td>

                                        <!-- Name -->
                                        <td>@cat.Name</td>

                                        <!-- Actions -->
                                        <td>
                                            <a class="btn btn-sm btn-warning me-1" asp-controller="Category" asp-action="Update" asp-route-id="@cat.Id">
                                                Edit
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteCategory(@cat.Id, this)">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted">No categories found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteCategory(id, btn) {
            if (!confirm("Are you sure you want to delete this category?")) return;

            fetch(`/Admin/Category/Delete/${id}`, { method: "POST" })
                .then(res => res.json())
                .then(success => {
                    if (success) {
                        btn.closest("tr").remove();
                    } else {
                        alert("Failed to delete category.");
                    }
                })
                .catch(err => console.error("Error:", err));
        }
    </script>
}
