@using Ogani.DataContext.Entities
@model List<Category>

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="card-title mb-0">Categories</h4>
                    <a class="btn btn-primary" asp-controller="category" asp-action="create">
                        <i class="mdi mdi-plus"></i> Add Category
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 120px;">Image</th>
                                <th>Name</th>
                                <th style="width: 250px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var category in Model)
                                {
                                    <tr>
                                        <td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(category.ImageUrl))
                                            {
                                                <img src="@Url.Content($"~/uploads/categories/{category.ImageUrl}")"
                                                     alt="@category.Name" class="img-thumbnail"
                                                     style="width: 80px; height: 80px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <img src="@Url.Content("~/images/no-image.png")"
                                                     alt="No Image" class="img-thumbnail"
                                                     style="width: 80px; height: 80px; object-fit: cover;" />
                                            }
                                        </td>
          
                                        <td>@category.Name</td>
                                        <td>
                                            <a class="btn btn-sm btn-info" asp-controller="category" asp-action="details" asp-route-id="@category.Id">
                                                Details
                                            </a>
                                            <a class="btn btn-sm btn-warning" asp-controller="category" asp-action="update" asp-route-id="@category.Id">
                                                Update
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" onclick="deleteCategory(@category.Id, this)">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted">No categories found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteCategory(id, element) {
        if (!confirm("Are you sure you want to delete this category?")) return;

        fetch(`https://localhost:7058/Admin/category/delete/${id}`, {
            method: "POST"
        })
       .then(response => response.json())
       .then(data => {
            element.closest("tr").remove();
       })
       .catch(error => {
            console.error('Error:', error);
       });
    }
</script>