@using Ogani.Areas.Admin.Models
@model CategoryUpdateViewModel

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <h4 class="card-title mb-4">Update Category</h4>

                <form asp-action="Update" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <!-- Category Name -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <!-- Current Image -->
                    @if (!string.IsNullOrEmpty(Model?.ImageUrl))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Current Image</label><br />
                            <img src="~/uploads/categories/@Model.ImageUrl"
                                 alt="@Model.Name"
                                 class="img-thumbnail mb-2"
                                 style="width:120px; height:120px; object-fit:cover;" />
                        </div>
                    }

                    <!-- Replace Image -->
                    <div class="mb-3">
                        <label for="ImageFile" class="form-label fw-bold">Replace Image</label>
                        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                        <small class="form-text text-muted">Leave empty if you don’t want to change the image</small>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="mdi mdi-check"></i> Submit
                        </button>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
