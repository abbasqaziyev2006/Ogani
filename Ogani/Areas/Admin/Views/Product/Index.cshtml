@using Ogani.DataContext.Entities
@model List<Product>

<div class="container mt-4">
    <h2 class="mb-3">Product List</h2>

    <a asp-action="Create" class="btn btn-success mb-3">+ Add Product</a>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Product</th>
                <th>Price</th>
                <th>Category</th>
                <th style="width:150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model)
                {
                    <tr>
                        <td>
                            <img src="~/uploads/products/@product.ImageUrl"
                                 alt="@product.Name"
                                 class="img-thumbnail"
                                 style="width:90px;height:90px;" />
                        </td>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>@product.Category?.Name</td>
                        <td>
                            <a asp-action="Update"
                               asp-route-id="@product.Id"
                               class="btn btn-sm btn-outline-warning">Edit</a>

                            <a href="javascript:void(0);"
                               class="btn btn-sm btn-outline-danger"
                               onclick="removeProduct(@product.Id, this)">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No products found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function removeProduct(id, btn) {
            if (!confirm("Do you really want to delete this product?")) return;

            fetch(`/Admin/Product/DeleteProduct/${id}`, {
                method: "POST"
            })
            .then(r => r.json())
            .then(success => {
                if (success) {
                    btn.closest("tr").remove();
                } else {
                    alert("Could not delete the product.");
                }
            })
            .catch(err => console.error("Error:", err));
        }
    </script>
}
