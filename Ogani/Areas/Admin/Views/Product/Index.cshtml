@using Ogani.DataContext.Entities
@model List<Product>

<div class="container mt-4">
    <h2 class="mb-3">Products</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">Create New Product</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Cover</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/uploads/products/@item.ImageUrl" alt="@item.Name" style="width:100px;height:100px;" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <button class="btn btn-danger btn-sm" onclick="deleteProduct(@item.Id, this)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function deleteProduct(id, element) {
        if (!confirm("Are you sure you want to delete this product?")) return;

        fetch(`/Admin/Product/DeleteProduct/${id}`, { method: "POST" })
            .then(response => response.json())
            .then(data => {
                if (data) {
                    element.closest("tr").remove();
                } else {
                    alert("Failed to delete product.");
                }
            })
            .catch(error => console.error("Error:", error));
    }
</script>
